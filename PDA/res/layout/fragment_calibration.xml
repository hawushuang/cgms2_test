<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/background_dark">

	<android.support.v7.widget.Toolbar
		android:visibility="gone"
		android:id="@+id/toolbar"
		style="?style_bar_title"
		app:navigationIcon="@null">

		<TextView
			android:id="@+id/text_view_title_bar"
			style="?style_text_title_bar"
			android:text="@string/activity_main_tab_calibration"/>
	</android.support.v7.widget.Toolbar>

	<TextView
		android:id="@+id/text_view_calibration"
		style="?style_text_medium"
		android:layout_width="0dp"
		android:layout_height="40dp"
		android:gravity="center"
		android:text="@string/fragment_calibration_insert_strip"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/toolbar">
	</TextView>

	<ImageView
		android:id="@+id/image_view_calibration"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@id/text_view_calibration"/>

	<Button
		android:id="@+id/button_calibration"
		style="?style_button_small"
		android:layout_width="220dp"
		android:layout_height="wrap_content"
		android:layout_margin="20dp"
		android:textSize="16sp"
		android:text="@string/fragment_manual_calibration"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>
