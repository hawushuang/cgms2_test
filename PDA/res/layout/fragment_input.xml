<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/background_light">

	<TextView
		android:id="@+id/text_view_comment"
		style="?style_text_medium"
		android:layout_width="0dp"
		android:gravity="center"
		android:padding="15dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>

	<LinearLayout
		android:id="@+id/layout_input"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="20dp"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_view_comment">

		<EditText
			android:id="@+id/edit_text_input_left"
			style="?style_edit_input"
			android:selectAllOnFocus="true"
			android:imeOptions="actionDone"
			android:layout_weight="1"/>

		<TextView
			android:id="@+id/text_view_separator_left"
			style="?style_text_medium"
			android:layout_weight="0"
			android:gravity="center"
			android:padding="10dp"
			android:text="-"
			android:textColor="@color/text_white"
			android:textStyle="bold"/>

		<EditText
			android:id="@+id/edit_text_input_center"
			style="?style_edit_input"
			android:selectAllOnFocus="false"
			android:imeOptions="actionDone"
			android:layout_weight="1"/>

		<TextView
			android:id="@+id/text_view_separator_right"
			style="?style_text_medium"
			android:layout_weight="0"
			android:gravity="center"
			android:padding="10dp"
			android:text="-"
			android:textColor="@color/text_white"
			android:textStyle="bold"/>

		<EditText
			android:id="@+id/edit_text_input_right"
			style="?style_edit_input"
			android:selectAllOnFocus="true"
			android:imeOptions="actionDone"
			android:layout_weight="1"/>
	</LinearLayout>
</android.support.constraint.ConstraintLayout>